{
  "name": "react-with-firebase",
  "version": "1.0.0",
  "description": "A project to practice firebase with react",
  "main": "index.js",
  "repository": "https://github.com/edevars/firebase-with-react.git",
  "author": "edevars",
  "license": "MIT",
  "scripts": {
    "develop": "webpack-dev-server --config ./webpack.dev.config.js",
    "build:dll": "webpack --config ./webpack.dll.config.js --mode production",
    "build": "webpack --config ./webpack.config.js --mode production",
    "serve": "yarn build:dll & yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.5.5",
    "add-asset-html-webpack-plugin": "^3.1.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "css-loader": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-watch": "^6.0.1",
    "file-loader": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": ">=8",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "1.19.1",
    "style-loader": "^0.23.1",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.1",
    "@material-ui/icons": "^4.5.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "firebase": "^7.5.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-toastify": "^5.4.1",
    "styled-components": "^4.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
